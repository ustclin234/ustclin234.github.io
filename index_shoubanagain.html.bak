<!DOCTYPE html>
<html>
<head>
    <title>daily chances</title>
    <style>
        #container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        #image {
            width: auto;
            height: auto;
            max-width: 100%;
            max-height: 100vh;
            display: block;
            margin: auto;
        }
        #buttons {
            display: flex;
            flex-direction: row;
            justify-content: center;
            margin-top: 20px;
        }
        #buttons button {
            margin: 0 10px;
        }
    </style>
</head>
<body>

    <script>
    var images = [];
    var currentIndex = 0;

    // fetch('https://api.github.com/repos/ustclin234/ustclin234.github.io/contents/qsshouban')
      .then(response => response.json())
      .then(data => {
        data.sort((a,b) => parseInt(a.name.split('.')[0]) - parseInt(b.name.split('.')[0]));
        console.log(data);
        data.forEach(function(item) {
          if (item.type === 'file' && item.name.endsWith('.png')) {
        images.push(item.download_url);
          }
        });
        currentIndex = Math.floor(Math.random() * images.length);
        document.getElementById('image').src = images[currentIndex];
      })
      .catch(error => {
        console.error('Error fetching image list:', error);
      });
        

    function next() {
        currentIndex = Math.floor(Math.random() * images.length);
        console.log(currentIndex)
        
        var img = document.getElementById('image');
        img.onload = function() {
            img.width = this.width;
            img.height = this.height;
        };
        img.src = images[currentIndex];
    }
    </script>

    <div id="container">
        <h1>daily chances</h1>
        <img id="image" src="">
        <div id="buttons">
            <button onclick="next()"  style="font-size:30px">Next</button>
        </div>
    </div>

</body>
</html>
